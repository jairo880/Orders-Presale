section#SC_Modulo_Notificaciones(ng-if="dato.AOBJ_Datos_Usuario[0].FK_ID_Rol == 3 || dato.AOBJ_Datos_Usuario[0].FK_ID_Rol == 5 ")
	//SESION NOTIFICACIONES (importado desde Modulo_Notificaciones.php)					
	section#SC_Notificaciones(ng-init="BL_Btns_Ver_Notificaciones = true")
		#CONT_Invisible(ng-click="BL_Contenedor_Notificaciones =! BL_Contenedor_Notificaciones" ng-show="BL_Contenedor_Notificaciones == true")
			.CL_Cerrar_Modal.CL_Transparente
		#CONT_Notificacion(ng-show="BL_Contenedor_Notificaciones == true")
		
			p.CL_TXT_Texto_3.icon-notificacion  Notificaciones 
			p.CL_Eliminar_1_1(ng-click="FN_Notificacion()" title="Cerrar el men√∫ de notificaciones") 
			#CONT_Notificaciones_Conts
				.Grid-Total.abcenter.Grid_Contenedor.CL_Alerta_5
					p.icon-retweet.CL_TXT_Enlace_4(title="Actualizar la lista de productos actuales",ng-click="FN_Listar_Notificaciones()")
				.CL_Estado_CONT.ng_repeat_anim1(ng-repeat="Notificaciones in dato.AOBJ_Notificaciones_Usuario")
					.CL_Icono_Estado
						p(ng-class="{'CL_Estado_Confirmado icon-agregar3': Notificaciones.Estado_Pedido == 'Atendido','CL_Estado_Cancelado icon-cancelado': Notificaciones.Estado_Pedido == 'Cancelado','CL_Estado_EnProgreso icon-actualizar': Notificaciones.Estado_Pedido == 'En proceso'}")

					.CL_Mensaje_Notificaciones
						p Codigo orden:{{Notificaciones.FK_ID_Pedido}}
						p Estado:{{Notificaciones.Estado_Pedido}}
						p.CL_TXT_Tiempo_Estado {{Notificaciones.Fecha_Envio | date:'longDate'}}
						.CL_Eliminar_Contenido(ng-click="FN_Eliminar_Notificacion($index)")
							p.icon-cancelar2
			.CL_Alerta_5.Padding-5(ng-show="(dato.AOBJ_Notificaciones_Usuario).length == 0")
				
				.CL_TXT_Mensaje No hay notificaciones
